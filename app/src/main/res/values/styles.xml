<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="QuestionText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/questionSize</item>
        <item name="android:paddingLeft">@dimen/questionMargin</item>
        <item name="android:background">@color/questionBox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BorderView" parent="Base.Theme.AppCompat">
        <item name="android:layout_height">@dimen/borderHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="questionPhrase" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/questionPhraseSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/phraseLeftMargin</item>
        <item name="android:layout_marginBottom">@dimen/phraseBottomMarg</item>
        <item name="android:layout_marginTop">@dimen/phraseTopMarg</item>
    </style>
    <style name="InputAnswerText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/answer</item>
        <item name="android:layout_marginLeft">@dimen/phraseLeftMargin</item>
        <item name="android:layout_marginRight">@dimen/phraseLeftMargin</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/hintText</item>
    </style>
    <style name="RadioFormat" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/phraseLeftMargin</item>
    </style>




</resources>
